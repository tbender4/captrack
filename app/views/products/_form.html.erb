<%= form_with model: product do |form| %>
    <div>
    <% product.errors.full_messages.each do |message| %>
      <div><%= message %></div>
    <% end %>
  </div>

  <div>
    <%= form.label :part_number %><br>
    <%= form.text_field :part_number %>
  </div>
  <div>
    <%= form.label :mfr_part_number %><br>
    <%= form.text_field :mfr_part_number %>
  </div>
  <div>
    <%= form.label :quantity %><br>
    <%= form.text_field :quantity %>
  </div>
  <div>
    <%= form.label :pkg %><br>
    <%= form.text_field :pkg %>
  </div>
  <div>
    <%= form.label :status %><br>
    <%= form.text_field :status %>
  </div>
  <div>
    <%= form.label :type %><br>
    <%= form.text_field :type %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>